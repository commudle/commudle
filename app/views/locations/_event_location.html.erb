<div class="event-location-container mb-3" id="event-location-<%= location.id %>">

  <div class="event-location-details">
    <h6><i class="fas fa-map-marker-alt pr-3 text-info"></i><%= location.name %></h6>
    <p class="ml-4 pl-1">
      <small><%= location.address %></small>
    </p>
  </div>

  <!--The div element for the map -->
  <% if allowed_view?(:locations, :destroy) %>
  <%= link_to event_location_path(event_id: event, id: location), remote: true, method: :delete, class: "close ml-2 text-danger", 'aria-label': 'Remove' do %>

  <span aria-hidden="true">&times;</span>
  <% end %>
  <% end %>
  <div>
    <iframe
        frameborder="0" style="border:0; width: 100%; height: 250px;"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDlkZfMj6a4lr7Y0GO4fIgT4PQsZfL-Ols&q=<%= location.url_escaped_address %>" allowfullscreen>
    </iframe>
  </div>

</div>