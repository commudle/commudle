<div id="event-data-form-entity-response-group-rsvp-email">


  <h3><%= @edfeg.name %></h3>
  <h4>Event: <%= @event.name %></h4>

  <% if @force %>
  <p>RSVP emails will be sent to all the shortlisted registrations</p>
  <% else %>
  <p>RSVP emails will be sent to the remaining shortlisted registrations</p>
  <% end %>


  <div class="email-format-container">
    <%= form_with url: send_event_data_form_entity_group_rsvp_email_event_communication_mailers_path(event_data_form_entity_group: @edfeg, force: @force), method: :post, remote: true do |f| %>
    <div class="text-center">
      <small class="alert alert-info" role="alert">
        We'll add the event details automatically to the email!
      </small>
    </div>
    <fieldset class="mt-3">
      <div class="field email-subject form-group">
        <%= f.label :subject %>
        <%= f.text_field :subject, value: "#{@event.kommunity.name} :: #{@event.name} :: RSVP", required: true, class: 'form-control'%>
        <%= f.hidden_field :force, value: @force %>
      </div>
      <div class="field">
        <%= f.label :message, "Add Some Message (Optional)" %>
        <%= f.text_area :message, :class => "tinymce editor", :rows => 3, :cols => 50 %>

      </div>
      <div class="form-group d-flex justify-content-center">
        <%= f.submit "Send RSVP", class: "btn-outline-primary" %>
      </div>


    </fieldset>

    <% end %>




  </div>


</div>