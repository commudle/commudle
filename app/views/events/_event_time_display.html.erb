<div id="event-timing">

  <% if event.start_time.to_date != event.end_time.to_date %>
  <span>
                  <span>
                    <%= event.start_time.strftime("%A") %>, <%= event.start_time.strftime("%d-%b-%Y") %></span> <span class=""> <%= event.start_time.strftime('%I:%M %p') %></span> -

                  <span><%= event.end_time.strftime("%A") %>, <%= event.end_time.strftime("%d-%b-%Y") %></span> <span class=""> <%= event.end_time.strftime('%I:%M %p') %></span>

                </span>
  <% else %>
  <span>
                  <span><%= event.start_time.strftime("%A") %>, <%= event.start_time.strftime("%d-%b-%Y") %></span> <span class=""> <%= event.start_time.strftime('%I:%M %p') %> To <%= event.end_time.strftime('%I:%M %p') %></span>
                </span>
  <% end %>

</div>